<%- include ("header") -%>

    <div class="box" id="heading">
        <h1>
            <%= listTitle %>
        </h1>
    </div>

    <div class="box" id="">
        <% tasks.forEach(task=> { %>

            <form action="/delete" method="post">
                <div class="item">
                    <input type="checkbox"  onChange="this.form.submit()" value="<%=task._id%>" name="theCheck">
                    <p>
                        <%= task.name %>
                    </p>
                </div>

            </form>

            <% }) %>



                <form action="/" class="item" method="post">
                    <input type="text" name="newTask" autofocus placeholder="What do you want to do?"
                        autocomplete="off">
                    <button name="list" type="submit" value=<%=listTitle %> >+</button>
                </form>
    </div>


    <%- include ("footer") -%>