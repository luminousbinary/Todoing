<%- include ("header") -%>

    <div class="box" id="heading">
        <h1>
            <%= foundItem.name %>
        </h1>
    </div>

    <div class="box" id="">
       
        <% foundItem.items.forEach(item=> { %>

                
            <form action="/delete" method="post">
                <div class="item">
                    <input type="checkbox"  onChange="this.form.submit()" value="<%=item._id%>" name="theCheck">
                    <p>
                        <%= item.name %>
                    </p>
                </div>

            </form>
  <% }) %>
        

<button > <a href="/"> Back</a></button>

                
    </div>


    <%- include ("footer") -%>